<%-include('../partials/head.ejs') %>
<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%-include('../partials/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/add-product?_csrf=<%=csrfToken%>" method="POST"
            enctype="multipart/form-data">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title">
                <span class="error"> <%if(typeof getError !== 'undefined'){ %><%= getError(errors ,'title')%><%}%>
                </span>
            </div>
                    <div class="form-control">
                        <label for="image">image</label>
                        <input type="file" accept='image/*' name="photo" id="image">

                    </div>
                    <div class="form-control">
                        <label for="price">Price</label>
                        <input type="number" name="price" id="price" step="0.01">
                        <span class="error"> <%if(typeof getError !== 'undefined'){ %><%= getError(errors ,'price')%><%}%>
                </span>
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" cols="30" rows="10"></textarea>
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button class="btn" type="submit">Add Product</button>
        </form>
    </main>
    <%-include('../partials/footer.ejs') %>