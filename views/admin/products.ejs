<%-include('../partials/head.ejs') %>
<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%-include('../partials/navigation.ejs') %>
    <main>
        <% if(prods.length > 0) {%>
        <div class="grid">
            <% for( let product of  prods) {%>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"><%=product.title%></h1>
                </header>
                <div class="card__image">
                    <img src="/img/<%=product.imageUrl%>" alt="A Book">
                </div>
                <div class="card__content">
                    <h2 class="product__price">$<%=product.price%></h2>
                    <p class=" product__description"><%=cropText(product.description)%>
                    </p>
                </div>
                <div class="card__actions">
                    <a class="btn" href="/admin/edit-product?id=<%=product._id%>">Edit </a> <a class="btn"
                        href="/admin/delete-product?id=<%=product._id%>">Delete </a> </div>
            </article> <%}%>
        </div>
        <%-include('../partials/pagination.ejs' , {current ,pages}) %>
            <%} else{%> <h1>No products found!</h1>
            <%}%>
    </main>
    <%-include('../partials/footer.ejs') %>