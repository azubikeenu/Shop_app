<%-include('../partials/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/auth.css">
</head>

<body>
    <%-include('../partials/navigation.ejs') %>
    <main>
        <% if (typeof successMessage !== 'undefined') { %>
        <div class="user-message user-message--success"><%= successMessage %></div>
        <% } %>
        <% if (typeof errorMessage !== 'undefined') { %>
        <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="login-form" action='/login' method="POST">
            <div class="form-control">
                <label for="email">Email</label>
                <input type="email" name="email" id="email" value="<%if(typeof oldInput !== 'undefined'){ %><%=oldInput.email.length>1? oldInput.email : ''%><%}%>">
                <span class="error"> <%if(typeof getError !== 'undefined'){ %><%= getError(errors ,'email')%><%}%>
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" value="<%if(typeof oldInput !== 'undefined'){ %><%=oldInput.password%><%}%>">
                <span class="error"> <%if(typeof getError !== 'undefined'){ %><%= getError(errors ,'password')%><%}%></span>

            </div>
   <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class="btn" type="submit"> Login</button>
        </form>

        <div class="centered"><a href="/reset-password">Reset Password</a></div>
    </main>
    <%-include('../partials/footer.ejs') %>